# =============================================================================
# AI Agent Backend Configuration
# =============================================================================
# Copy this file to .env and fill in your actual API keys and configuration
# Never commit .env files to version control!

# =============================================================================
# Environment Configuration
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL with pgvector extension for vector database capabilities
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_agent_db

# Redis for caching and session management
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Security Configuration
# =============================================================================
# JWT secret key - MUST be changed in production!
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# AI Model API Keys
# =============================================================================
# Groq API (Primary fast inference)
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API (GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Search API Keys
# =============================================================================
# SerpAPI for web search (Primary)
SERP_API_KEY=your_serpapi_key_here

# Brave Search API (Fallback)
BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here

# =============================================================================
# Cryptocurrency API Keys
# =============================================================================
# Binance API for crypto market data
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# =============================================================================
# Weather API Keys
# =============================================================================
# OpenWeather API for weather data
OPENWEATHER_API_KEY=your_openweather_api_key_here

# =============================================================================
# Stock Market API Keys
# =============================================================================
# Alpha Vantage API for stock market data
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# =============================================================================
# Sentiment Analysis API Keys
# =============================================================================
# Sentiment analysis API key (optional - will use mock data if not provided)
SENTIMENT_API_KEY=your_sentiment_api_key_here

# =============================================================================
# Plugin System Configuration
# =============================================================================
# Plugin configurations (JSON format)
PLUGIN_CONFIGS={"ExampleDataPlugin": {"api_key": "your_example_api_key", "base_url": "https://api.example.com"}, "WeatherDataPlugin": {"api_key": "your_weather_api_key"}}

# =============================================================================
# Vector Database Configuration
# =============================================================================
# Snowflake Arctic embeddings model configuration
ARCTIC_MODEL_NAME=Snowflake/snowflake-arctic-embed-m
VECTOR_DIMENSION=1024
MAX_VECTOR_RESULTS=10

# =============================================================================
# API Configuration
# =============================================================================
API_V1_STR=/api/v1
PROJECT_NAME=AI Agent API
API_VERSION=1.0.0

# Server configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# =============================================================================
# CORS Configuration
# =============================================================================
# Frontend origins that can access the API
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:8080"]

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
# Requests per minute per IP
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# External API Configuration
# =============================================================================
# Request timeouts (seconds)
EXTERNAL_API_TIMEOUT=30
SEARCH_API_TIMEOUT=10
AI_API_TIMEOUT=60

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY=1

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/ai_agent.log

# =============================================================================
# Demo Mode Configuration
# =============================================================================
# Enable demo mode when API keys are missing
ENABLE_DEMO_MODE=true
DEMO_RESPONSE_DELAY=1